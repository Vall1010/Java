import java.util.Arrays;
import java.util.Scanner;

public class AveArray {
	
   public static void main(String [] args){
	   
      System.out.println("Please enter the required number of elements of the array: ");
      
      Scanner s = new Scanner(System.in);
      
      int elementN = s.nextInt();
      
      int Array[] = new int [elementN];
      int sum = 0;
      
      System.out.println("Please enter the elements of the array one by one: ");

      for(int i=0; i<elementN; i++){
    	  
         Array[i] = s.nextInt();
         
         sum = sum + Array[i];
      }
      
      System.out.println("Sum of the elements of the array: "+sum);
      System.out.println("Average of the elements in the array: "+sum/Array.length);
   }
}
